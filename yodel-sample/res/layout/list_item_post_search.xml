<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
    <ImageView
        android:id="@+id/post_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginEnd="@dimen/view_margin_medium"
        android:layout_marginRight="@dimen/view_margin_medium"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:transitionName="post_image"
        android:scaleType="centerCrop"
        tools:ignore="UnusedAttribute"/>
    <TextView
        android:id="@+id/post_publisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/post_image"
        android:layout_toEndOf="@id/post_image"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        tools:text="@string/placeholder_publisher_name"/>

    <TextView
        android:id="@+id/post_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_publisher"
        android:layout_toRightOf="@id/post_image"
        android:layout_toEndOf="@id/post_image"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-light"
        android:maxLines="2"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:textSize="@dimen/text_size_medium"
        tools:text="@string/placeholder_post_body"/>
</RelativeLayout>